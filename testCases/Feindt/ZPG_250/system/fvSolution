FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
      solver           GAMG;
      smoother         GaussSeidel;
      tolerance        1e-6;
      relTol           0.01;
      minIter 1;
    }

    "(h|U|k|omega|gammaInt|gamma|ReThetat|Ar)"
    {
      solver           smoothSolver;
      smoother         symGaussSeidel;
      tolerance        1e-8;
      relTol           0.01;
      minIter 1;
    }
}

SIMPLE
{
    consistent  yes;
    
    residualControl
    {
        p               1e-5;
        U               1e-6;
	"(k|omega|gammaInt|ReThetat|Ar)" 1e-4;
    }
}

relaxationFactors
{
    fields
    {
        p               1; 
    }
    equations
    {
        ".*"               0.7; 
    }
}

cache
{
    grad(U);
}

