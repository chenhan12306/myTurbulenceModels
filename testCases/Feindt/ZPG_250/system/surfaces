#includeEtc "caseDicts/postProcessing/visualization/surfaces.cfg"

fields       (p U wallShearStress);
surfaceFormat   raw;

surfaces
(
         wall
        {
            type            patch;
            patches         ("lowerWall");
            interpolate     false;
        }

);

