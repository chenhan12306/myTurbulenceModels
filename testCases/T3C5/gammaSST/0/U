FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volVectorField;
    object          U;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (5.0 0 0);

boundaryField
{
	wall
    {
        type            fixedValue;
		value     uniform (0 0 0);
    }
    firstBottomFace
    {
        type            slip;
    }
    firstTopFace
    {
        type            slip;
    }
    secondTopFace
    {
        type            slip;
    }
    inlet
    {
        type            fixedValue;
        value           uniform (5.0 0 0);
    }
    outlet
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }	
}


